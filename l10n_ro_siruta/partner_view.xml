<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Partner -->

        <record id="view_partner_form" model="ir.ui.view" >
            <field name="name">partners_form_address</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <field name="city" position="replace">
                    <field name="city" invisible="1"/>
                    <field name="city_id" placeholder="City" class="o_address_city"  style="width: 50%%"
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field name="commune_id" class="o_address_city" placeholder="City/Commune"  style="width: 50%%"
                           options='{"no_open": True}'
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                </field>
                <field name="zip" position="before">
                    <field name="zone_id" class="o_address_state" style="width: 50%%" placeholder="Zone" options='{"no_open": True}'
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>

                </field>
