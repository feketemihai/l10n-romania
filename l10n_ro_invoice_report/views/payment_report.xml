<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>



        <template id="report_payment">

            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-5">
                                    <strong>Companie:</strong><br/>
                                    <strong t-field="res_company.partner_id.name"/>
                                    <div>
                                        <strong>Address:</strong>
                                        <address t-field="res_company.partner_id"
                                                 t-field-options='{"widget": "contact", "fields": ["address","phone", "fax"], "no_marker": false, "no_tag_br": true}'/>
                                    </div>

                                </div>

                                <div class="col-xs-5 col-xs-offset-2">
                                    <div>
                                        <strong>Client:</strong><br/>
                                        <strong t-field="o.partner_id.name"/>
                                    </div>
                                    <div>
                                        <strong>Address:</strong>

                                        <address t-field="o.partner_id"
                                                 t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": false, "no_tag_br": true}'/>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-xs-5">
                                    <div t-if="res_company.partner_id.vat">
                                        <strong>CIF:</strong>
                                        <span t-field="res_company.partner_id.vat"/>
                                    </div>
                                    <div t-if="res_company.partner_id.nrc">
                                        <strong>NRC:</strong>
                                        <span t-field="res_company.partner_id.nrc"/>
                                    </div>
                                    <div i-if="res_company.share_capital">
                                        <strong>Share Capital:</strong>
                                        <span t-field="res_company.share_capital"/>
                                    </div>
                                </div>
                                <div class="col-xs-5 col-xs-offset-2">
                                    <div t-if="o.partner_id.vat">
                                        <strong>CIF:</strong>
                                        <span t-field="o.partner_id.vat"/>
                                    </div>
                                    <div t-if="o.partner_id.nrc">
                                        <strong>NRC:</strong>
                                        <span t-field="o.partner_id.nrc"/>
                                    </div>
                                </div>
                            </div>
                            <br/>

                            <h2>

                                <t t-if="o.payment_type=='inbound'">
                                    <span>Voucher:</span>

                                </t>
                                <t t-if="o.payment_type=='outbound'">
                                    <span>Payment disposal:</span>

                                </t>

                                <t t-if="o.payment_type=='transfer'">
									<span>Transfer:</span>
                                </t>
                                <span t-field="o.name"/>
                                /
                                <span t-field="o.payment_date"/>
                            </h2>


                            <table class="table table-condensed">
                                <tr>

                                    <td t-if="o.payment_type=='inbound'">Received from:</td>
                                    <td t-if="o.payment_type=='outbound'">For:</td>
                                    <td t-if="o.payment_type=='transfer'">To:</td>
                                    <td>
                                        <span t-field="o.partner_id.name"/>
                                        <span t-field="o.destination_journal_id.name" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Amount:</td>
                                    <td>
                                        <span t-field="o.amount"/>
                                         
                                    </td>
                                </tr>
                                <tr>
                                    <td>Amount (in words):</td>
                                    <td>
<!--                                        <span t-esc="convert(o.amount)"/>-->
                                        <span t-esc="o.currency_id.amount_to_text(o.amount)" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Representing:</td>
                                    <td>

                                        <t t-set="communication" t-value="''"/>
                                        <t t-if="o.invoice_ids">
                                           <t t-foreach="o.invoice_ids" t-as="i">
                                               <t t-set="communication" t-value="communication + i.number"/>
                                               <span t-field="i.number"/> <span>from date:</span>

                                               <span t-field="i.date_invoice"/>
                                           </t>
                                        </t>
                                        <t t-if="communication != o.communication">
                                            <span t-field="o.communication"/>
                                        </t>

                                    </td>
                                </tr>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
						
