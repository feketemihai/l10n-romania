<?xml version="1.0"?>
<openerp>
    <data>
        <record id="hr_contract_view_ro_form2" model="ir.ui.view">
            <field name="name">hr.contract.view.ro.form2</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_ro_hr.hr_contract_view_ro_form"/>
            <field name="arch" type="xml">
                <field name="advantages" position="replace">
                    <field name="advantage_ids" context="{'contract_id': active_id}">
                        <tree string="Advantages" editable="bottom">
                            <field name="advantage" string="Advantage"/>
                            <field name="amount" string="Amount"/>
                        </tree>
                    </field>
                </field>
                <xpath expr="//field[@name='pensioneer']" position="after">
                    <field name="programmer_or_handicaped"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
