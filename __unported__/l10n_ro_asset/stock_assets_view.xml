<openerp>
<data>
    
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref='stock.view_move_form' />
            <field name="arch" type="xml">
                <field name="picking_type_id" position="replace">
					<field
            name="picking_type_id"
            on_change="onchange_picking_type_id(picking_type_id)"
          />
                </field>
                <field name="location_dest_id" position="replace">
					<field
            name="location_dest_id"
            on_change="onchange_location_asset(location_dest_id)"
          />
                </field>
                <field name="location_id" position="replace">
					<field name="location_id" on_change="onchange_location_asset(location_id)" />
                </field>
                <group string="Destination" position="after">
                    <group string="Asset">
						<field name="picking_type_code" invisible="1" />
					    <field name="location_asset" invisible="1" />
					    <field name="location_dest_asset" invisible="1" />
					    <field
              name="asset_category_id"
              on_change="onchange_asset_category_id(asset_category_id, picking_type_id, context)"
              attrs="{'invisible':[('picking_type_code','!=','incoming')], 'readonly': [('location_dest_asset','!=',True)]}"
            />
					    <field
              name="asset_id"
              domain="[('product_id','=',product_id),('state','=','open')]"
              attrs="{'invisible':[('picking_type_code','!=','outgoing')], 'readonly': [('location_asset','!=',True)]}"
            />
                    </group>
                </group>
            </field>
        </record>
        
        <record id="view_move_picking_form" model="ir.ui.view">
            <field name="name">stock.move.form.picking</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref='stock.view_move_picking_form' />
            <field name="arch" type="xml">
                <field name="picking_type_id" position="replace">
					<field
            name="picking_type_id"
            on_change="onchange_picking_type_id(picking_type_id)"
          />
                </field>
                <field name="location_dest_id" position="replace">
					<field
            name="location_dest_id"
            on_change="onchange_location_dest_asset(location_dest_id)"
          />
                </field>
                <field name="location_id" position="replace">
					<field name="location_id" on_change="onchange_location_asset(location_id)" />
                </field>
                <group string="Locations" position="after">
                    <group string="Asset">
						<field name="picking_type_code" invisible="1" />
					    <field name="location_asset" invisible="1" />
					    <field name="location_dest_asset" invisible="1" />
					    <field
              name="asset_category_id"
              on_change="onchange_asset_category_id(asset_category_id, picking_type_id, context)"
              attrs="{'invisible':[('picking_type_code','!=','incoming')], 'readonly': [('location_dest_asset','!=',True)]}"
            />
					    <field
              name="asset_id"
              domain="[('product_id','=',product_id),('state','=','open')]"
              attrs="{'invisible':[('picking_type_code','!=','outgoing')], 'readonly': [('location_asset','!=',True)]}"
            />
                    </group>
                </group>
            </field>
        </record>
</data>
</openerp>
