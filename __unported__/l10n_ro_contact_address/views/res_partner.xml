<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">Detailed contacts address</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
 
               <xpath
          expr="/form/sheet//div/field[@name='street']"
          position="after"
        >
                    <div>
                        <field
              name="add_street"
              style="width: 80%%"
              placeholder="Street..."
              attrs="{'readonly': [('use_parent_address','=',True)],
                                       'invisible': [('is_company','=',True)]}"
            />
                        <field
              name="add_number"
              style="width: 19%%"
              placeholder="Number..."
              attrs="{'readonly': [('use_parent_address','=',True)],
                                       'invisible': [('is_company','=',True)]}"
            />
                        <newline />
                        <field
              name="add_block"
              style="width: 34%%"
              placeholder="Block..."
              attrs="{'readonly': [('use_parent_address','=',True)],
                                       'invisible': [('is_company','=',True)]}"
            />
                        <field
              name="add_staircase"
              style="width: 33%%"
              placeholder="Staircase..."
              attrs="{'readonly': [('use_parent_address','=',True)],
                                       'invisible': [('is_company','=',True)]}"
            />
                        <field
              name="add_flat"
              style="width: 33%%"
              placeholder="Flat..."
              attrs="{'readonly': [('use_parent_address','=',True)],
                                       'invisible': [('is_company','=',True)]}"
            />
                    </div>
                </xpath>
               <xpath
          expr="/form/sheet//div/field[@name='street']"
          position="attributes"
        >
                    <attribute
            name="attrs"
          >{'readonly': ['|', ('is_company','!=',True), ('use_parent_address','=',True)]}</attribute>
                </xpath>
            </field>
        </record>
                
        <record id="base.action_partner_form" model="ir.actions.act_window">
			<field name="context">
				{'readonly_by_pass': ['street',]}
			</field>
        </record>
    </data>
</openerp>
