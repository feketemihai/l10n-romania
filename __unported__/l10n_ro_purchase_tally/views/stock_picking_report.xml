                                </div>
                                <div class="col-sm-4 pull-left">
                                    <h4>DATA <span t-field="o.date" t-field-options='{"format": "dd MM yyyy"}'/>    </h4>
                                </div>
                                <div class="col-sm-4 pull-right">
                                </div>
                                <div class="col-sm-4 pull-left">
                                    <h4>SEMNĂTURA</h4>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <report
            string="Borderou achizitie"
            id="action_report_tally"
            model="stock.picking"
            report_type="qweb-pdf"
            name="l10n_ro_stock_picking_report.report_tally"
            file="l10n_ro_stock_picking_report.report_tally"
        />
    </data>
</odoo>