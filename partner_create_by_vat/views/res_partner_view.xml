<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.vat.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_vat.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
           		    <header>
 				        <button name="button_get_partner_data"
                                attrs="{'invisible': [('name', '&lt;&gt;', ' '),('vat', '=', False),('is_company', '=', False )]}" colspan="2"
                                string="Get Partner Data" context="{'active_id': active_id}" type="object"
                                 />
                	</header>  
           	    </xpath>

               <field name="nrc" position="after">
                     <field name="vat_subjected" />
                </field>
            </field>
        </record>

    </data>
</openerp>

