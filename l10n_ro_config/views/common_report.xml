<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="banks">
            <small>
                <t t-set="currency_id" t-value="res_company.currency_id"/>
                <t t-if="'currency_id' in o._fields">
                    <t t-set="currency_id" t-value="o.currency_id"/>
                </t>
                <t t-set="counts" t-value="0"/>
                <div t-foreach="partner_id.bank_ids.filtered(lambda r: r.footer)" t-as="bank">

                    <t t-set="bank_currency" t-value="bank.currency_id or res_company.currency_id"/>
                    <t t-if="bank_currency == currency_id and counts&lt;3">
                        <span t-if="bank.bank_name">
                            <strong>Bank:</strong>
                            <span t-field="bank.bank_name"/>
                        </span>
                        <span t-if="bank.acc_number">
                            <strong>Account:</strong>
                            <span t-field="bank.acc_number"/>
                        </span>
                        <t t-set="counts" t-value="counts+1"/>
                    </t>
                </div>
            </small>
        </template>


        <template id="report_address_company">
            <t t-if="'company_id' in o._fields">
                <t t-set="res_company" t-value="o.company_id"/>
            </t>

            <div class="row">
                <div class="col-xs-5">
                    <div>
                        <strong>Company</strong>
                    </div>
                    <strong t-field="res_company.partner_id.name"/>
                    <div>
                        <strong>Address:</strong>
                        <address t-field="res_company.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address","phone", "fax"], "no_marker": false, "no_tag_br": true}'/>
                    </div>

                </div>
            </div>
            <small>
                <div class="row">
                    <div class="col-xs-6">
                        <t t-set="partner_id" t-value="res_company.partner_id"/>
                        <t t-call="l10n_ro_config.banks"/>
                    </div>
                </div>
            </small>


            <div class="row">
                <div class="col-xs-5">
                    <div t-if="res_company.partner_id.vat">
                        <strong>CIF:</strong>
                        <span t-field="res_company.partner_id.vat"/>
                    </div>
                    <div t-if="res_company.partner_id.nrc">
                        <strong>NRC:</strong>
                        <span t-field="res_company.partner_id.nrc"/>
                    </div>

                    <div i-if="res_company.share_capital">
                        <strong>Share Capital:</strong>
                        <span t-esc="int(res_company.share_capital)"  />
                    </div>
                </div>
            </div>

            <br/>
            <br/>
        </template>
    </data>
</odoo>