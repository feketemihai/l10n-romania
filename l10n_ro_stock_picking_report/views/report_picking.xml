										<td>
											<t t-esc="formatLang(o.date, date=True)" />
										</td>
									</tr>
								</tbody>
							</table>

							<table class="table table-condensed">
								<thead>
									<tr>
										<th>
											<strong>Product</strong>
										</th>
										<th class="text-right">
											<strong>Quantity</strong>
										</th>
										<th class="text-right">
											<strong>Price</strong>
										</th>
										<th class="text-right">
											<strong>Amount</strong>
										</th>
										<th class="text-right">
											<strong>Taxes</strong>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr t-foreach="o.move_lines" t-as="move">
										<t t-set="line" t-value="get_line(move)" />
										<td>
											<span t-field="move.product_id" />
										</td>
										<td class="text-right">
											<span t-field="move.product_uom_qty" />
											<span t-field="move.product_uom" groups="product.group_uom" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['price'])" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['amount'])" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['tax'])" />
										</td>

									</tr>
								</tbody>
							</table>


							<t t-call="l10n_ro_stock_picking_report.report_totals" />
							<t t-call="l10n_ro_stock_picking_report.report_delivery_sign" />
							<div class="oe_structure" />
						</div>
					</t>
				</t>
			</t>
		</template>


		<template id="report_reception_sign">
			<table class="table table-condensed">
				<thead>
					<tr>
						<th>Reception Committee:</th>
						<th>Received in storage:</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Name</td>
						<td>Name</td>
					</tr>
					<tr>
						<td>Signature</td>
						<td>Signature</td>
					</tr>
					<tr>
						<td>Date</td>
						<td>Date</td>
					</tr>
				</tbody>
			</table>
		</template>

		<template id="report_reception">

			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<div class="page">
							<t t-call="l10n_ro_stock_picking_report.report_address" />

							<h2>
								<span>Reception:</span>
								<span t-field="o.name" />
							</h2>
							<table class="table table-condensed">
								<thead>
									<tr>
										<th>
											<strong>Origin</strong>
										</th>
										<th>
											<strong>Date</strong>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>
											<span t-field="o.origin" />
										</td>
										<td>
											<t t-esc="formatLang(o.date, date=True)" />
										</td>
									</tr>
								</tbody>
							</table>

							<div>
								<span>The undersigned, members of the reception, we proceeded to receive material values supplied by</span>
								<strong>
									<span t-field="o.partner_id.name" />
								</strong>

								<span t-if="o.partner_id.city">
									from the city

									<strong>
										<span t-field="o.partner_id.city" />
									</strong>
								</span>
								<span>under the invoice (delivery note) no.</span>
								<strong>
									<span t-field="o.origin" />
								</strong>
								<span>ascertained the following:</span>
							</div>
							<br />
							<table class="table table-condensed">
								<thead>
									<tr>
										<th>
											<strong>Product</strong>
										</th>
										<th class="text-right">
											<strong>Quantity</strong>
										</th>
										<th class="text-right">
											<strong>Price</strong>
										</th>
										<th class="text-right">
											<strong>Amount</strong>
										</th>
										<th class="text-right">
											<strong>Taxes</strong>
										</th>
										<th class="text-right">
											<strong>Amount with taxes</strong>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr t-foreach="o.move_lines" t-as="move">
										<t t-set="line" t-value="get_line(move)" />
										<td>
											<span t-field="move.product_id" />
										</td>
										<td class="text-right">
											<span t-field="move.product_uom_qty" />
											<span t-field="move.product_uom" groups="product.group_uom" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['price'])" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['amount'])" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['tax'])" />
										</td>
										<td class="text-right">
											<span t-esc="formatLang(line['amount_tax'])" />
										</td>
									</tr>
								</tbody>
							</table>
							<t t-call="l10n_ro_stock_picking_report.report_totals" />
							<t t-call="l10n_ro_stock_picking_report.report_reception_sign" />
							<div class="oe_structure" />
						</div>
					</t>
				</t>
			</t>
		</template>

		<template id="report_reception_sale_price">

			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<div class="page">
							<t t-call="l10n_ro_stock_picking_report.report_address" />
							<h2>
								<span>Reception:</span>
								<span t-field="o.name" />
							</h2>
